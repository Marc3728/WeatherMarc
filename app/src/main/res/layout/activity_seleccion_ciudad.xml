<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SeleccionCiudad">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="401dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenseleccionc"
        app:layout_constraintVertical_bias="0.067" />

    <Button
        android:id="@+id/buttonspinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="CARGA"
        app:layout_constraintEnd_toEndOf="@+id/spinner"
        app:layout_constraintStart_toStartOf="@+id/spinner"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <Button
        android:id="@+id/anadirciudad"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="@+id/buttonspinner"
        app:layout_constraintStart_toEndOf="@+id/buttonspinner"
        app:layout_constraintTop_toTopOf="@+id/buttonspinner" />

    <ImageView
        android:id="@+id/imagenseleccionc"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/miubi"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Utiliza tu ubicacion"
        app:layout_constraintBottom_toBottomOf="@+id/buttonspinner"
        app:layout_constraintEnd_toStartOf="@+id/buttonspinner"
        app:layout_constraintTop_toTopOf="@+id/buttonspinner"
        app:srcCompat="@drawable/ic_baseline_gps_not_fixed_24" />

</androidx.constraintlayout.widget.ConstraintLayout>