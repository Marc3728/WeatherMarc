<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Nombre"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/nombreciudad"
        app:layout_constraintEnd_toStartOf="@+id/nombreciudad"
        app:layout_constraintTop_toTopOf="@+id/nombreciudad" />

    <EditText
        android:id="@+id/nombreciudad"
        android:layout_width="188dp"
        android:layout_height="52dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.303" />

    <EditText
        android:id="@+id/latitudciudad"
        android:layout_width="190dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/nombreciudad"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nombreciudad"
        app:layout_constraintTop_toBottomOf="@+id/nombreciudad" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Latitud"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/latitudciudad"
        app:layout_constraintEnd_toStartOf="@+id/latitudciudad"
        app:layout_constraintTop_toTopOf="@+id/latitudciudad" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Longitud"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/longitudciudad"
        app:layout_constraintEnd_toStartOf="@+id/longitudciudad"
        app:layout_constraintTop_toTopOf="@+id/longitudciudad" />

    <EditText
        android:id="@+id/longitudciudad"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/latitudciudad"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/latitudciudad"
        app:layout_constraintTop_toBottomOf="@+id/latitudciudad" />

    <EditText
        android:id="@+id/urlciudad"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/longitudciudad"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/longitudciudad"
        app:layout_constraintTop_toBottomOf="@+id/longitudciudad" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="URL"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/urlciudad"
        app:layout_constraintEnd_toStartOf="@+id/urlciudad"
        app:layout_constraintTop_toTopOf="@+id/urlciudad" />

    <Button
        android:id="@+id/anadir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="ANADIR"
        app:layout_constraintEnd_toEndOf="@+id/textView10"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <Button
        android:id="@+id/cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="CANCELAR"
        app:layout_constraintBottom_toBottomOf="@+id/anadir"
        app:layout_constraintStart_toEndOf="@+id/anadir"
        app:layout_constraintTop_toTopOf="@+id/anadir"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>